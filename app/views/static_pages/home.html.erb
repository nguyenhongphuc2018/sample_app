<%= provide(:title, t("home"))%>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1><%= t "home_page.welcome" %></h1>
  <h2>
    <%= t "home_page.this_is" %>
    <a href="http://www.railstutorial.org/"><%=t(:rails)%></a>
    <%= t "home_page.sample" %>
  </h2>
  <%= link_to t("signnow") , signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: t("rails_logo")),"http://rubyonrails.org/" %>
<% end %>
